{
  "compilerOptions": {
    // Target and Module
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    
    // Output Configuration
    "outDir": "./dist",
    "rootDir": "./",
    
    // Type Checking - relaxed for CI compatibility
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    
    // Module Resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Advanced Options
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": false,
    "isolatedModules": true,
    
    // Path Mapping
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    },
    
    // Google Apps Script specific
    "types": ["google-apps-script", "jest", "node"]
  },
  
  "include": [
    "src/**/*.gs",
    "src/**/*.js", 
    "src/**/*.ts",
    "*.ts",
    "*.js"
  ],
  
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.js",
    "**/*.spec.js"
  ],
  
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2020"
    }
  }
}