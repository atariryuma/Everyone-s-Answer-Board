{
  "compilerOptions": {
    // Target and Module
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    
    // Output Configuration
    "outDir": "./dist",
    "rootDir": "./",
    
    // Type Checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    
    // Module Resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Advanced Options
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    // Path Mapping
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@mocks/*": ["tests/mocks/*"]
    },
    
    // Google Apps Script specific
    "types": ["google-apps-script", "jest", "node"]
  },
  
  "include": [
    "src/**/*",
    "tests/**/*",
    "*.ts",
    "*.js"
  ],
  
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.js",
    "**/*.spec.js"
  ],
  
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2020"
    }
  }
}