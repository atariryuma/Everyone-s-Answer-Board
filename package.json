{
  "name": "everyone-s-answer-board",
  "version": "1.0.0",
  "description": "A collaborative answer board using Google Apps Script.",
  "main": "index.js",
  "scripts": {
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "echo 'No tests directory - skipping test lint'",
    "lint:src": "eslint \"src/**/*.{js,gs,ts}\" --fix",
    "lint:all": "npm run lint:src",
    "format": "prettier --write \"src/**/*.{js,gs,html,ts}\"",
    "check": "echo 'Build check - Service Account統一化完了' && npm run test",
    "check:full": "npm-run-all typecheck lint:all test:ci",
    "push": "clasp push",
    "pull": "clasp pull",
    "open": "clasp open",
    "deploy": "npm run check && npm run push",
    "cleanup": "node scripts/cleanup-unused-code.js",
    "cleanup:dry": "node scripts/cleanup-unused-code.js --dry-run",
    "cleanup:report": "node scripts/cleanup-reporter.js",
    "analyze": "node scripts/dependency-analyzer.js",
    "validate:functions": "node scripts/validate-functions.js",
    "validate:functions:watch": "nodemon scripts/validate-functions.js",
    "test:functions": "jest tests/functionMappingValidation.test.js",
    "analyze:flow": "node scripts/analyze-system-flow.js",
    "analyze:critical": "node scripts/analyze-critical-functions.js",
    "analyze:comprehensive": "node scripts/comprehensive-claude-md-audit.js",
    "analyze:business": "node scripts/business-function-efficiency-audit.js",
    "fix:claude-md": "node scripts/fix-claude-md-violations.js",
    "system:health": "npm run analyze:critical && npm run check",
    "system:full-audit": "npm run analyze:comprehensive && npm run analyze:business && npm run analyze:critical",
    "system:optimize": "node scripts/generate-optimization-report.js",
    "system:complete-audit": "npm run system:full-audit && npm run system:optimize"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atariryuma/Everyone-s-Answer-Board.git"
  },
  "keywords": [
    "gas",
    "google-apps-script"
  ],
  "author": "Ryuma Atari",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/atariryuma/Everyone-s-Answer-Board/issues"
  },
  "homepage": "https://github.com/atariryuma/Everyone-s-Answer-Board#readme",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@google/clasp": "^3.0.6-alpha",
    "@types/google-apps-script": "^1.0.83",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.16.10",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "googleapis": "^148.0.0",
    "jest": "^29.6.2",
    "jest-extended": "^4.0.2",
    "jest-junit": "^16.0.0",
    "jsdom": "^26.1.0",
    "nock": "^13.5.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
