{
  "name": "everyone-s-answer-board",
  "version": "1.0.0",
  "description": "A collaborative answer board using Google Apps Script.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint \"tests/**/*.js\" --fix",
    "lint:src": "eslint \"src/**/*.{js,gs}\" --fix",
    "format": "prettier --write \"src/**/*.{js,gs,html}\" \"tests/**/*.js\"",
    "check": "npm run test",
    "check:full": "npm-run-all lint test",
    "push": "clasp push",
    "pull": "clasp pull",
    "open": "clasp open",
    "deploy": "npm run check && npm run push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atariryuma/Everyone-s-Answer-Board.git"
  },
  "keywords": [
    "gas",
    "google-apps-script"
  ],
  "author": "Ryuma Atari",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/atariryuma/Everyone-s-Answer-Board/issues"
  },
  "homepage": "https://github.com/atariryuma/Everyone-s-Answer-Board#readme",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@google/clasp": "^3.0.6-alpha",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "googleapis": "^148.0.0",
    "jest": "^29.6.2",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2"
  }
}
